# Development environment
API_ENV=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_BASE_URL=http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/reputation_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# JWT & Security
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
ENCRYPTION_KEY=your-encryption-key-here-32-chars

# AI/ML Configuration
SENTIMENT_MODEL_TYPE=transformer
SENTIMENT_MODEL_PATH=/models/sentiment
REPUTATION_SCORING_ENABLED=true
TREND_ANALYSIS_SENSITIVITY=2.0

# Data Source API Keys
# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# News API
NEWSAPI_KEY=your_newsapi_key

# Reddit
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ReputationAI/1.0

# Google (for News & Reviews)
GOOGLE_API_KEY=your_google_api_key
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_ADDRESS=noreply@aiguardian.com
SMTP_USE_TLS=true

# SMS/Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_CREDENTIALS_PATH=/config/firebase-credentials.json
FIREBASE_PROJECT_ID=your_firebase_project_id

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1024

# Background Tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Data Retention
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
ANONYMIZE_AFTER_DELETION=true

# GDPR/Privacy
GDPR_COMPLIANCE_ENABLED=true
DATA_EXPORT_FORMAT=json
ALLOW_DATA_DELETION=true
COOKIE_CONSENT_REQUIRED=true

# Feature Flags
ENABLE_VOICE_ANALYSIS=false
ENABLE_VIDEO_ANALYSIS=false
ENABLE_DEEPFAKE_DETECTION=false
ENABLE_INFLUENCER_ANALYSIS=true
ENABLE_CRISIS_PREDICTION=true
ENABLE_COMPETITIVE_BENCHMARKING=true

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Storage
UPLOAD_MAX_SIZE_MB=50
STORAGE_BACKEND=local  # local, s3, gcs
AWS_S3_BUCKET=your-s3-bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=30
ENABLE_GZIP_COMPRESSION=true

# Development Tools
ENABLE_API_DOCS=true
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false
